<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kz.almaty.boombrains">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/boom_brains"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/boom_brains_round"
        android:supportsRtl="true"
        android:theme="@style/LightTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".game_pages.rem_words.RememberWordsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".game_pages.shulte_letter.ShulteLetterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".main_pages.HowToPlayActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".game_pages.shulte_page.ShulteLevel"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_pages.start_page.AreYouReadyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_pages.equation.EquationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_pages.number_znaki.NumberZnakiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_pages.find_number.FindNumberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_pages.FinishedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_pages.zapomni_chislo_page.ZapomniChisloActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game_pages.shulte_page.ShulteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_pages.GamesStartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_pages.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main_pages.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7342268862236285~6997367048" />
    </application>

</manifest>