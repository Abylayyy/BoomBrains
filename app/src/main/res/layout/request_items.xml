<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/req_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Username"
        android:textColor="@color/requestedFriends"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/req_email"
        app:layout_constraintEnd_toStartOf="@+id/addRequestBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/req_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:text="Email"
        android:textColor="@color/requestedEmails"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/req_username" />

    <Button
        android:id="@+id/addRequestBtn"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/add_draw"
        android:fontFamily="@font/roboto"
        android:padding="5dp"
        android:text="@string/AddFriend"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rejectRequestBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rejectRequestBtn"
        android:layout_width="70dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/add_draw"
        android:backgroundTint="@color/requestColor"
        android:fontFamily="@font/roboto"
        android:padding="5dp"
        android:text="@string/reject"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>