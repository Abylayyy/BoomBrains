<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lang_background"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:paddingRight="25dp"
        android:paddingBottom="45dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="#373780"
            android:gravity="center"
            android:text="@string/ChangeLanguage"
            android:textColor="#fff"
            android:textSize="20sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/russionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="Русский"
            android:textColor="#000"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/englishTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="English"
            android:textColor="#000"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/kazakhTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/card_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="Қазақ тілі"
            android:textColor="#000"
            app:fontFamily="@font/roboto" />

    </LinearLayout>

    <TextView
        android:id="@+id/cancelTxt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cancel_lang"
        android:gravity="center"
        android:text="@string/Cancel"
        android:textColor="#373780" />

</LinearLayout>